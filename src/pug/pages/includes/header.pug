                          include nav-drop-down.pug
                        li.nav__item
                          a.nav__row(href="#")
                            svg.nav__svg
                              use(xlink:href="img/sprite.svg#reproduction-icon")
                            span.nav__link РЕПРОДУКЦИИ
                          include nav-drop-down.pug
                        li.nav__item
                          a.nav__row(href="#")
                            svg.nav__svg
                              use(xlink:href="img/sprite.svg#mirrors-icon")
                            span.nav__link ЗЕРКАЛА В БАГЕТЕ
                          include nav-drop-down.pug
                        li.nav__item
                          a.nav__row(href="#")
                            svg.nav__svg
                              use(xlink:href="img/sprite.svg#picture-photo-icon")
                            span.nav__link КАРТИНА ПО ВАШЕМУ ФОТО
                          include nav-drop-down.pug


    .header-up__down
      .container
        .header-up__down-flex
          a.logo(href="#")
            .logo__wrap
              img.logo__img(src="img/logo.svg")
            .logo__wrap.logo__wrap--mob
              img.logo__img-mob(src="img/logo-mob.svg")

          .row-toggle
            .row-toggle__wrapper
              .toggle-nav(id="katalog")
                .toggle-nav__wrapper
                  svg.toggle-nav__svg
                    use(xlink:href="img/sprite.svg#catalog")
                  span.toggle-nav__text каталог

              .toggle-nav(id="menu")
                .toggle-nav__wrapper
                  svg.toggle-nav__svg
                    use(xlink:href="img/sprite.svg#burger")
                  span.toggle-nav__text меню

          .search-line
            form.search-line__form
              .search-line__wrapper
                input.search-line__field(type="text" placeholder="артикул, название, теги")
                button.search-line__btn(type="submit")
                  svg.search-line__svg
                    use(xlink:href="img/sprite.svg#search-icon")
                  span.search-line__text найти

          .header-up__right

            .circle-link.none-circle(id="searcBtn")
              span.circle-link__value
              svg.circle-link__svg
                use(xlink:href="img/sprite.svg#search-icon")
              svg.circle-link__svg.circle-link__svg--close
                use(xlink:href="img/sprite.svg#close")  
            a.circle-link(href="#")
              span.circle-link__value
              svg.circle-link__svg
                use(xlink:href="img/sprite.svg#favorites-icon")
            a.circle-link(href="#")
              span.circle-link__value 12
              svg.circle-link__svg
                use(xlink:href="img/sprite.svg#cart-icon")

            .header-up__wrap
              a.header-up__tel(href="tel:88002222298") 8 800 222 22 98
              span.header-up__text-link.show_popup(rel="call") заказать звонок

